<div class="container-fluid admin_fluid">
    <h4 class="admin_dashboard">DASHBOARD</h4>
    <div class="container admin_wrap">
        <form action="/admin" method="post">
            <div class="admin_home row">

                <div class="col-md">
                    <a href="">
                        <h5><input type="submit" name="btn_admin" value="Users"></h5>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="">
                        <h5><input type="submit" name="btn_admin" value="Posts"></h5>
                    </a>
                </div>
                <div class="col-md">
                    <a href="">
                        <h5><input type="submit" name="btn_admin" value="Updates"></h5>
                    </a>
                </div>
            </div>
        </form>
        <div class="admin_content">
            <div class="admin_users {{users_control}}">
                <h5>USERS</h5>


                

                    <form action="/register_control" method="post">
                        <input type="submit" value="new" class="btn">
                    </form>


                <div>

                    <div class="card_reg shadow-2-strong card-registration regwrap {{register_control}}"
                        style="border-radius: 15px;">
                        
                        <div class="card-body p-4 p-md-5 ">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 register_p">Register an account</h3>
                            <form method="post" action="/register" class="card-body1">

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input placeholder="First Name" name="firstName" type="text" id="firstName"
                                                class="form-control form-control-lg" />
                                            {{!-- <label class="form-label" for="firstName">First Name</label> --}}
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input placeholder="Last Name" name="lastName" type="text" id="lastName"
                                                class="form-control form-control-lg" />
                                            {{!-- <label class="form-label" for="lastName">Last Name</label> --}}
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4 d-flex align-items-center">

                                        <div class='input-group date form-outline' id='datetimepicker5'>
                                            <input placeholder="Date of birth" name="DOB" type='text'
                                                class="form-control" />
                                            {{!-- <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span> --}}
                                            {{!-- <label class="form-label" for="datetimepicker5">Date of birth</label>
                                            --}}
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4 form-outline">

                                        <h6 class="mb-2 pb-1">Gender: </h6>

                                        <div class="form-check form-check-inline">
                                            <input placeholder="Gender" class="form-check-input" type="radio"
                                                name="gender" id="female" value="female" checked />
                                            <label class="form-check-label" for="female">Female</label>
                                        </div>

                                        <div class="form-check form-check-inline">
                                            <input placeholder="Gender" class="form-check-input" type="radio"
                                                name="gender" id="male" value="male" />
                                            <label class="form-check-label" for="male">Male</label>
                                        </div>


                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4 d-flex align-items-center">

                                        <div class='input-group date form-outline' id='datetimepicker5'>
                                            <input placeholder="Password" name="password" type='password'
                                                class="form-control" />
                                            {{!-- <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span> --}}
                                            {{!-- <label class="form-label" for="datetimepicker5">Date of birth</label>
                                            --}}
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4 form-outline">



                                        <div class="input-group date form-outline">
                                            <input placeholder="Re-type Password" name="password2" type='password2'
                                                class="form-control" />

                                        </div>



                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4 pb-2">

                                        <div class="form-outline">
                                            <input placeholder="Email" name="email" type="email" id="email"
                                                class="form-control form-control-lg" />
                                            {{!-- <label class="form-label" for="emailAddress">Email</label> --}}
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4 pb-2">

                                        <div class="form-outline">
                                            <input placeholder="Phone Number" name="phone" type="text" id="phone"
                                                class="form-control form-control-lg" />
                                            {{!-- <label class="form-label" for="phoneNumber">Phone Number</label> --}}
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-4 pb-2">

                                            <div class="form-outline">
                                                <input placeholder="Upload an image" type="file" name="avator"
                                                    id="avator">
                                                {{!-- <label class="form-label" for="avator">Upload an image</label>
                                                --}}
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4 pb-2">
                                            <div class="form-outline">
                                                <select id="inputState" class=" form__input" name="role">
                                                    <option selected>User</option>
                                                    <option disabled>Admin</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 mb-4 pb-2">

                                               <div class="form-outline">
                                    <select id="inputState" class=" form__input" name="provinces">
                                    <option>EASTERN CAPE</option>
                                    <option>FREE STATE</option>
                                    <option>GAUTENG</option>
                                    <option>LIMPOPO</option>
                                    <option>WESTERN CAPE</option>
                                    <option>NORTHERN CAPE</option>
                                    <option>KWAZULU NATAL</option>
                                    <option>MPUMALANGA</option>
                                    <option>NORTH WEST</option>
                                </select>
                                </div>
                    </div>
                                        </div>
                                       
                                    </div>
                                </div>



                                <div class="mt-4 pt-2">
                                    <input class="btn btn-primary btn-sm" type="submit" value="Submit" />
                                    
                                </div>



                            </form>
                            <form action="/close_reg" method="post">
                                <input class="btn btn-warning btn-sm" type="submit" value="Close" />
                            </form>

                        </div>
                    </div>




                </div>
                <table class="table table-striped table-responsive-sm">
                    <thead>
                        <tr>
                            <th scope="col">userId</th>
                            <th scope="col">Names</th>
                            <th scope="col">DOB</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col"> Role</th>
                            <th scope="col"> Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each results}}
                        <tr>
                            <th scope="row">{{userid}}</th>
                            <td>{{firstname}} {{lastname}}</td>
                            <td>{{dob}}</td>
                            <td>{{gender}}</td>
                            <td>{{email}}</td>
                            <td>{{phone}}</td>
                            <td>{{userole}}</td>
                            <td><img src="{{avator}}" alt=""></td>
                            <td><select id="inputState" class=" form__input form-control-sm" name="userType">
                                    <option>Edit</option>
                                    <option>Delete</option>
                                    <option>Verify</option>
                                </select></td>
                        </tr>
                        {{/each}}


                    </tbody>
                </table>
            </div>

            <div class="admin_posts {{posts_control}}">
                <h5>POSTS</h5>
                <table class="table table-striped table-responsive-sm">
                    <thead>
                        <tr>
                            <th scope="col">Names</th>
                            <th scope="col">Tittle</th>
                            <th scope="col">Post Content</th>
                            <th scope="col">Post Date</th>
                            <th scope="col"> Action</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                         {{#each results3}}
                           <tr>
                            
                            <th scope="row">{{firstname}}, {{lastname}}</th>
                            <td>{{tittle}}</td>
                            <td>{{postcontent}}</td>
                            <td>{{post_date}}</td>
                            <td><select id="inputState" class=" form__input form-control-sm" name="userType">
                                    <option>Edit</option>
                                    <option>Delete</option>
                                    <option>Verify</option>
                                </select></td>
                        </tr>
                        {{/each}}
                       

                    </tbody>
                </table>
            </div>



            <div class="admin_updates {{updates_control}}">

                <h5>UPDATES</h5>
                <div>

                    <form action="/updates_control" method="post">


                        <input type="submit" value="new" class="btn">

                    </form>
                    <div class="update_input {{update_input_control}} conainer">
                        <form action="/post_update" method="post" class="post_update">
                            <div>
                                <input type="text" name="tittle" id="" placeholder="Tittle">
                                <div class="d-flex justify-content-center">
                                    <div class="btn btn-mdb-color btn-rounded float-left">
                                        <span>Supporting Media</span>
                                        <input type="file" name="image">
                                    </div>
                                </div>
                                <textarea class="txtpost" name="content" id="" cols="50" rows="5"
                                    placeholder="Post an update!"></textarea>
                            </div>
                            <div class="">
                                <button type="submit" class=" btn-sm update_btn">Share</button>
                            </div>
                        </form>
                        <form action="/close_upd" method="post">
                       <button type="submit" class=" btn-sm update_btn" name="btn">Close</button>

                        </form>
                    </div>

                </div>
                <table class="table table-striped table-responsive-sm">
                    <thead>
                        <tr>
                            <th scope="col">updateId</th>
                            <th scope="col">Tittle</th>
                            <th scope="col">Content</th>
                            <th scope="col">date</th>
                            <th scope="col">Media</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each results2}}
                        <form action="/delete_update/{{updateid}}" method="post">
                            <tr>
                                <th scope="row">{{updateid}}</th>
                                <td>{{tittle}}</td>
                                <td>{{post_content}}</td>
                                <td>{{created_on}}</td>
                                <td>{{image}}</td>

                                <td><select id="inputState" class=" form__input form-control-sm" name="userType">
                                        <option>Edit</option>
                                        <option><button type="submit" name="delete"
                                                style="background-color: blue;"></button>Delete</option>
                                        <option>Verify</option>
                                    </select></td>
                            </tr>
                        </form>

                        {{/each}}
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>