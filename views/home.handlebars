<div class=" row home">
  


    <div class="col-md-3 container left">
        <div class="homediv">
            <h4 class="home_name">{{results5.firstname}}, {{results5.lastname}}</h4>

            <img src="images/logo.png" class="img-fluid img-responsive profilepic thumbnail rounded-image" alt="">
        </div>
        <div class="home_prof homediv homediv2 ">
            <div class="text-center"> <i class="fa fa-calendar fa-5x" aria-hidden="true"></i></div>
            <div>
                <h5 class="text-cente mdl_date">{{date}}</h5>
            </div>
            <small class="left_dates">{{time}}</small>
        </div>
        <div class="home_prof homediv homediv2 ">
            <div class="text-center"><i class="fa fa-sun-o fa-5x" aria-hidden="true"></i></div>

            <div>
                <h5 class="text-center mdl_weather">{{w1}}</h5>
            </div>
            <small class="left_dates">{{w2}}</small>
        </div>


    </div>
    <div class="col-md-6 middle">
        <div class="post_input">
           <form action="/makepost" method="post">
           <div class="form-group">
             <label for=""></label>
             
             <input type="text"" 
               class="form-control txtpost" name="tittle" id=""  placeholder="Enter Tittle!">
           </div>
               <div class="form-group" >
                <textarea style="justify-items: center; justify-self: center;" class="txtpost" name="postcontent" id="" cols="50" rows="5"
                    placeholder="What's in your mind?"></textarea>
            </div>
            <div class="middleb form-group">
                <button type="submit" class="mdl-btn btn-sm btn-primary">Post</button>
            </div>
           </form> 

        </div>
        <div class="post_input1 ">
            
            {{#each results4}}
                <div class="post">
                <div class="post_meta_wrap">
                    <h5 class="post_name">
                        <small muted>
                            {{firstname}} {{lastname}}
                        </small>
                    </h5>
                <h6 class="post_date">
                    <small>
                        {{post_date}}
                    </small>
                    </h6>

                </div>
                <div class="post_cont_wrap">
                    <h2 class="post_tittle">{{tittle}}</h2>
                    <div>
                        {{postcontent}}
                    </div>
                    <img class="post_img img-fluid" src="{{post_media}}" alt="">
                </div>
                
            </div>

            {{/each}}
            <div class="middleb">

            </div>
        </div>
    </div>
    <div class="col container right">
        <div class="home_prof homedivr ">
            <div class="text-center"><i class="fa fa-newspaper-o" aria-hidden="true"></i></div>
            <div>
                <h4 class="text-center updates">UPDATES</h4>
            </div>
        </div>
        {{#each results}}

            <div class="homediv">
            <div>
                <h6 class="left_date">
                    <small>
                        {{created_on}}
                    </small>
                </h6>
            <h5 class="left_tittle">{{tittle}}</h5>
            </div>

            <div>
                <p class="left_p">
                {{post_content}}

            </p>
            </div>
            <div class="left_span">
                <a href=""><i class="fa fa-book" aria-hidden="true">more</i></a>

            </div>
        </div>
        {{/each}}
        
       
        


    </div>
</div>